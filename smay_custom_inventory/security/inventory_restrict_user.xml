<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <data noupdate="1">

        <record id="inventory_rule_user" model="ir.rule">
            <field name="name">Show inventories by warehouse.</field>
            <field name="model_id" ref="model_stock_inventory"/>
            <field name="domain_force">
                [('location_id.location_id.id','=',user.inventory_stock_location_id.location_id.id)]
            </field>
            <field name="groups" eval="[(4,ref('stock.group_stock_user'))]"/>
        </record>

        <record id="inventory_rule_manager" model="ir.rule">
            <field name="name">Show inventories by warehouse.</field>
            <field name="model_id" ref="model_stock_inventory"/>
            <field name="domain_force">
                [(1,'=',1)]
            </field>
            <field name="groups" eval="[(4,ref('stock.group_stock_manager'))]"/>
        </record>


    </data>
</odoo>
