<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="conciliation_rule_user_order" model="ir.rule">
        <field name="name">Show conciliation of user.</field>
        <field name="model_id" ref="model_conciliation_withdrawals"/>
        <field name="domain_force">[('sucursal_id','=',user.sucursal_id.id)]</field>
        <field name="groups" eval="[(4,ref('point_of_sale.group_pos_user'))]"/>
    </record>

    <record id="conciliation_rule_manager_order" model="ir.rule">
        <field name="name">Show All conciliation for Manager.</field>
        <field name="model_id" ref="model_conciliation_withdrawals"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4,ref('point_of_sale.group_pos_manager'))]"/>
    </record>

</odoo>
