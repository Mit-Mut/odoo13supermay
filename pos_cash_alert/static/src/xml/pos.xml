<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <!--I define the template for the button in the top menu-->
    <t t-extend="PopUpMenu">
        <t t-jquery=".gridView" t-operation="append">
            <div class="gridView-listItem">
                <div class="gridView-detailsSection">
                    <div class="gridView-toolbar retirementButton">
                        <div class="gridView-menu"><i class="fa fa-money"></i></div>
                        <div class="gridView-date">Retiro de Efectivo</div>
                    </div>
                </div>
            </div>
        </t>
    </t>

    <t t-name="XmlReciboDeRetiro">
        <receipt align='center' width='40' value-thousands-separator=''>
            <div class="page" style="width:100%">
                <div class='leyenda_retiro' align="center"
                     style="border:1px solid black;margin:0 auto;padding:0 auto;font-size:25px">
                    <strong>RECIBO DE <t t-esc="receipt.reason.toUpperCase()"/> </strong>
                </div>
                <div align="center" style="margin:0 auto;padding:0 auto;font-size:20px;margin-top:8px;"
                     class="company_logo">
                    <t t-if="receipt.company.logo">
                        <img t-att-src="receipt.company.logo" style="width: 85%;height:130px"/>
                        <br/>
                    </t>
                    <div style="font-size:13px;">
                        <t t-if="receipt.company.name">
                            <t t-esc="receipt.company.name"/>
                            <br/>
                        </t>
                    </div>
                </div>

                <table style="width:100%;margin-top:15px;" class="informacion_retiro">
                    <tr>
                        <td class="text-left">
                            Fecha
                        </td>
                        <td class="text-right">
                            <span t-esc="receipt.date.localestring"/>
                        </td>
                    </tr>
                    <tr>
                        <td class="text-left">
                            Sucursal
                        </td>
                        <td class="text-right">
                            <span t-esc="widget.pos.config.sucursal_id[1]"/>
                        </td>
                    </tr>
                    <tr>
                        <td class="text-left">
                            Folio
                        </td>
                        <td class="text-right">
                            <t t-esc='receipt.last_id_out'/>
                        </td>
                    </tr>
                    <tr>
                        <td class="text-left">
                            Sesión
                        </td>
                        <td class="text-right">
                            <t t-esc='receipt.NameSession'/>
                        </td>
                    </tr>
                    <tr>
                        <td class="text-left">
                            Cajero
                        </td>
                        <td class="text-right">
                            <t t-esc='receipt.cashier'/>
                        </td>
                    </tr>
                    <tr>
                        <td class="text-left">
                            Monto
                        </td>
                        <td class="text-right">
                            <t t-esc='receipt.moneyOut'/>
                        </td>
                    </tr>
                    <tr>
                        <td class="text-left">
                            Razón
                        </td>
                        <td class="text-right">
                            <t t-esc='receipt.reason'/>
                        </td>
                    </tr>
                    <tr>
                        <td class="text-left">
                            Observación
                        </td>
                        <td class="text-right">
                            <t t-esc='receipt.comment'/>
                        </td>
                    </tr>
                </table>
                <br/>

                <table class="denominaciones" style="width:100%;margin-top:15px;">
                    <tr>
                        <th style="text-align:center">
                            Moneda
                        </th>
                        <th style="text-align:center">
                            Cantidad
                        </th>
                        <th style="text-align:center">
                            Monto
                        </th>
                    </tr>
                    <t t-set="total_by_denomination" t-value="0"/>
                    <tr t-foreach="receipt.denominations" t-as="denomination">
                        <td class="text-right" style='text-align:right;padding-right: 5px'>
                            <t t-esc="denomination.denomination"/>
                        </td>
                        <td class="text-right" style='text-align:right;padding-right: 5px'>
                            <t t-esc="denomination.qty"/>
                        </td>
                        <td class="text-right" style='text-align:right;padding-right: 5px'>
                            <t t-esc="denomination.amount"/>
                        </td>
                    </tr>
                    <tr>
                        <th colspan="3" class="text-right" style='text-align:right;padding-right: 5px'>
                            <div class="text-right">
                                ________________________
                            </div>
                        </th>
                    </tr>
                    <tr>
                        <th colspan="2" style='text-align:right;padding-right: 5px'>
                            Total
                        </th>
                        <th style='text-align:right;padding-right: 5px'>
                             <t t-esc='receipt.moneyOut'/>
                        </th>
                    </tr>
                    <tr>
                        <td colspan="3" style='text-align:center'>
                            <br/>
                            <br/>
                            Firma: _________________________
                        </td>
                    </tr>
                    <!--
                    <tr>
                        <td colspan="3">
                            <br/>
                            <br/>
                            <img t-att-src="receipt.url_id" style="width:130%;height:75px;position:relative;left:-45px"
                                 id="barcode_ticket"/>
                        </td>
                    </tr>
                    <tr>
                        <th colspan="3" style='text-align:center' class="folio">
                            <t t-esc='receipt.last_id_out'/>
                        </th>
                    </tr>
                    -->
                </table>

            </div>
        </receipt>
    </t>
</templates>
